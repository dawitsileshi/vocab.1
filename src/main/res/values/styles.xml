<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darker_blue</item>
        <item name="colorPrimaryDark">@color/darker_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#fcfcfc</item>
        <item name="cardBackground">#ffffff</item>
        <item name="textColor">@color/gunMetal</item>
        <item name="titles">@color/marbleBlue</item>
        <item name="tintColor">@color/slateBlue</item>
        <item name="switchThumb">@color/platinum</item>
        <item name="switchTrack">@color/grayCloud</item>
        <item name="buttonColor">@color/colorAccent</item>
        <item name="iconColor">@color/dark_blue</item>
        <item name="correctAnswer">@color/yellowGreen</item>
        <item name="customTabIndicator">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="settingsImageView">
    </style>

    <style name="settingsStyle">
        <item name="android:layout_marginRight">@dimen/margin_end</item>
        <item name="android:layout_marginLeft">@dimen/margin_start</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom</item>
    </style>

    <style name="popUpScaleAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <style name="popUpAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="buttonText">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textColor">?attr/textColor</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">?attr/iconColor</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <!--<style name="show_dialogAnimation">-->
        <!--<item name="android:windowEnterAnimation">@anim/slide_in_top</item>-->
        <!--<item name="android:windowExitAnimation">@anim/slide_out_bottom</item>-->
    <!--</style>-->

    <style name="switchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/denimBlue</item>
        <item name="colorSwitchThumbNormal">@color/iceBerg</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="checkAnswerAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>
    <!--<item name="tint">@color/blonde</item>-->
    <!--<item name="tint">@color/blonde</item>-->

    <style name="darkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/blonde</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="backgroundColor">#303030</item>
        <item name="cardBackground">#424242</item>
        <item name="textColor">#ffffff</item>
        <item name="tintColor">#ffffff</item>
        <item name="titles">@color/marbleBlue</item>
        <item name="switchThumb">@color/iceBerg</item>
        <item name="switchTrack">@color/denimBlue</item>
        <item name="buttonColor">@color/grayCloud</item>
        <item name="iconColor">@color/darker_purple</item>
        <item name="customTabIndicator">@color/darker_purple</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
    <!--<item name="android:typeface">serif</item>-->

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="SettingTextViewTheme" parent="settingsStyle">
        <item name="android:typeface">normal</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="buttonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.">

        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="CardView.">
        <item name="android:state_pressed">@android:color/holo_blue_light</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@android:color/darker_gray</item>

    </style>

    <style name="AppTheme.CustomDialog" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">#ff90ff90</item>
    </style>

    <style name="MyFloatingWindow">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="my_dialog_style">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="detailAnimation" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
