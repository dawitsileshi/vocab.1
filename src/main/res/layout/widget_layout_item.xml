<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout_widget_layout"
    android:background="@color/cornYellowDarkened">

    <LinearLayout
        android:id="@+id/linearLayout_widget_layout_horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"/>

    <LinearLayout
        android:id="@+id/linearLayout_widget_layout_vertical"
        android:layout_width="2dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@android:color/white"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout_widget_layout_text_container"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:gravity="center">

            <TextView
                android:id="@+id/textView_widget_layout_item_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Word"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toStartOf="@+id/textView_widget_layout_item_wordType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_widget_layout_item_wordType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="noun"
                android:textAllCaps="false"
                android:textStyle="italic"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView_widget_layout_item_word"
                app:layout_constraintEnd_toEndOf="parent" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                app:layout_constraintBottom_toTopOf="@+id/textView_widget_layout_item_meaning"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_widget_layout_item_word"/>

            <TextView
                android:id="@+id/textView_widget_layout_item_meaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="20dp"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_widget_layout_item_word" />



            </LinearLayout>

        </LinearLayout>


</RelativeLayout>




